body
  /! Navigation
  nav.navbar.navbar-default.navbar-fixed-top.topnav role="navigation"
    .container.topnav
      /! Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" type="button"
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        div.navbar-brand.topnav
          - if current_user
            | Signed in as &nbsp;
            strong
              = current_user.name
            |, &nbsp;
            strong.h2
              = link_to 'Sign out', signout_path, id: 'sign_out'
          - else
            = link_to 'Sign in with Facebook', '/auth/facebook', id: 'sign_in'
        / a.navbar-brand.topnav href="/auth/facebook"  onclick="checkLoginState()" Log in with Facebook
      /! Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a href="#about"  About
          li
            a href="#services"  Services
          li
            a href="#contact"  Contact
          / fb:login-button scope="public_profile,email" onlogin="checkLoginState();"

      /! /.navbar-collapse
    /! /.container
  /! Header
  a name="about"
  .intro-header
    .container
      .row
        .col-lg-12
          .intro-message
            h1 PeerLearning
            h2#status
            h3 A product by Avanti Learning Centres
            hr.intro-divider/
            - if current_user
              h4
                | Welcome, 
                = current_user.name
            - else
                h3 
                  a href="/auth/facebook" class="btn btn-lg btn-primary"
                    strong
                      | f | 
                    | Connect with Facebook
                    / img.img-responsive alt="" src=image_url("FBloginbutton.jpg") /
                strong
                    | OR
                br
                br
                button type="button" class="btn btn-lg btn-default" data-toggle="modal" data-target="#signUpFormModal"
                  | Tell us about you             
                  / div class="fb-login-button" data-max-rows="1" data-size="xlarge" data-show-faces="false" data-auto-logout-link="false" href="/auth/facebook"
                  /   | Connect with Facebook
                  / fb:login-button scope="public_profile,email" onlogin="checkLoginState();"
                  / = link_to 'Connect with Facebook', '/auth/facebook', id: 'sign_in'
                
    /! /.container
  /! /.intro-header
