/! Modal
#signUpFormModal.modal.fade aria-labelledby="myModalLabel" role="dialog" tabindex="-1" 
  .modal-dialog role="document" 
    .modal-content
      .modal-header
        button.close aria-label="Close" data-dismiss="modal" type="button" 
          span aria-hidden="true"  &times;
        h4#myModalLabel.modal-title Enter details below
      .modal-body
        .form-container 
          == render partial: 'form', locals: { form_object: @user }
      .modal-footer
        / button.btn.btn-default data-dismiss="modal" type="button"  Close
        / button.btn.btn-primary#submit-details type="button"  Submit 


